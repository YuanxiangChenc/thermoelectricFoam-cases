type            surfaces;
libs            ("libsampling.so");

writeControl    timeStep;
writeInterval   1;

surfaceFormat   raw;          // easiest to visualize in ParaView
interpolationScheme face;

fields          (kEff);

surfaces
(
    planeY
    {
        type            cuttingPlane;
        planeType       pointAndNormal;
        pointAndNormalDict
        {
            point   (0 0.00353 0);
            normal  (0 1 0);
        }
        interpolate false;    // keep face values
    }
);

